<?xml version="1.0" encoding="utf-8"?>
<install version="2.5" type="plugin" group="content" method="upgrade">
        <name>StatsD Content</name>
        <author>Michael Marod</author>
        <creationDate>April 2012</creationDate>
        <copyright>(C) 2012 Michael Marod. All rights reserved.</copyright>
        <license>GNU General Public License version 2 or later</license>
        <authorEmail>michael@michaelmarod.com</authorEmail>
        <authorUrl>www.michaelmarod.com</authorUrl>
        <version>0.0.1</version>
        <description>PLG_CONTENT_STATSD_XML_DESCRIPTION</description>
        <files>
                <filename plugin="statsd">statsd.php</filename>
                <filename>index.html</filename>
        </files>
        <languages>
        </languages>
        <config>
	        <fields name="params">
		        	<fieldset name="general" label="PLG_CONTENT_STATSD_PARAM_GENERAL_LABEL">
                        <field name="subPrefix" type="text" default="" label="subPrefix" description="An optional additional prefix for this group. It will be appended to the global prefix that was set in the component." ></field>
					</fieldset>
                    <fieldset name="content" label="PLG_CONTENT_STATSD_PARAM_CONTENT_LABEL">
                        <field name="onAfterDisplay" type="radio" default="0" label="onAfterDisplay" description="Enable onAfterDisplay Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onContentAfterSave" type="radio" default="0" label="onContentAfterSave" description="Enable onContentAfterSave Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onAfterDisplayTitle" type="radio" default="0" label="onAfterDisplayTitle" description="Enable onAfterDisplayTitle Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onContentAfterDisplay" type="radio" default="0" label="onContentAfterDisplay" description="Enable onContentAfterDisplay Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onPrepareContent" type="radio" default="0" label="onPrepareContent" description="Enable onPrepareContent Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onBeforeDisplay" type="radio" default="0" label="onBeforeDisplay" description="Enable onBeforeDisplay Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onContentBeforeSave" type="radio" default="0" label="onContentBeforeSave" description="Enable onContentBeforeSave Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onContentBeforeDisplay" type="radio" default="0" label="onContentBeforeDisplay" description="Enable onContentBeforeDisplay Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onPrepareContentForm" type="radio" default="0" label="onPrepareContentForm" description="Enable onPrepareContentForm Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onPrepareContentData" type="radio" default="0" label="onPrepareContentData" description="Enable onPrepareContentData Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                    </fieldset>
            </fields>
        </config>
</install>
