<?xml version="1.0" encoding="utf-8"?>
<install version="2.5" type="plugin" group="search" method="upgrade">
        <name>StatsD Search</name>
        <author>Michael Marod</author>
        <creationDate>April 2012</creationDate>
        <copyright>(C) 2012 Michael Marod. All rights reserved.</copyright>
        <license>GNU General Public License version 2 or later</license>
        <authorEmail>michael@michaelmarod.com</authorEmail>
        <authorUrl>www.michaelmarod.com</authorUrl>
        <version>0.0.1</version>
        <description>PLG_SEARCH_STATSD_XML_DESCRIPTION</description>
        <files>
                <filename plugin="statsd">statsd.php</filename>
                <filename>index.html</filename>
        </files>
        <languages>
        </languages>
        <config>
	        <fields name="params">
		        	<fieldset name="general" label="PLG_SEARCH_STATSD_PARAM_GENERAL_LABEL">
                        <field name="subPrefix" type="text" default="" label="subPrefix" description="An optional additional prefix for this group. It will be appended to the global prefix that was set in the component." ></field>
					</fieldset>
                    <fieldset name="search" label="PLG_SEARCH_STATSD_PARAM_SEARCH_LABEL">
                        <field name="onContentSearch" type="radio" default="0" label="onContentSearch" description="Enable onContentSearch Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                        <field name="onContentSearchAreas" type="radio" default="0" label="onContentSearchAreas" description="Enable onContentSearchAreas Statistics" >
							<option value="1">On</option>
                        	<option value="0">Off</option>
                        </field>
                            <field name="onSearch" type="radio" default="0" label="onSearch" description="Enable onSearch Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                            <field name="onSearchAreas" type="radio" default="0" label="onSearchAreas" description="Enable onSearchAreas Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                    </fieldset>
            </fields>
        </config>
</install>
