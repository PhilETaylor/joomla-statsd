<?xml version="1.0" encoding="utf-8"?>
<install version="2.5" type="plugin" group="editors" method="upgrade">
        <name>StatsD Editors</name>
        <author>Michael Marod</author>
        <creationDate>April 2012</creationDate>
        <copyright>(C) 2012 Michael Marod. All rights reserved.</copyright>
        <license>GNU General Public License version 2 or later</license>
        <authorEmail>michael@michaelmarod.com</authorEmail>
        <authorUrl>www.michaelmarod.com</authorUrl>
        <version>0.0.1</version>
        <description>PLG_EDITORS_STATSD_XML_DESCRIPTION</description>
        <files>
                <filename plugin="statsd">statsd.php</filename>
                <filename>index.html</filename>
        </files>
        <languages>
        </languages>
        <config>
	        <fields name="params">
		        	<fieldset name="general" label="PLG_EDITORS_STATSD_PARAM_GENERAL_LABEL">
                        <field name="subPrefix" type="text" default="" label="subPrefix" description="An optional additional prefix for this group. It will be appended to the global prefix that was set in the component." ></field>
					</fieldset>
                    <fieldset name="editors" label="PLG_EDITORS_STATSD_PARAM_EDITORS_LABEL">
                            <field name="onInit" type="radio" default="0" label="onInit" description="Enable onInit Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                            <field name="onSave" type="radio" default="0" label="onSave" description="Enable onSave Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                            <field name="onSetContent" type="radio" default="0" label="onSetContent" description="Enable onSetContent Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                            <field name="onDisplay" type="radio" default="0" label="onDisplay" description="Enable onDisplay Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                            <field name="onGetContent" type="radio" default="0" label="onGetContent" description="Enable onGetContent Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                            <field name="onGetInsertMethod" type="radio" default="0" label="onGetInsertMethod" description="Enable onGetInsertMethod Statistics" >
								<option value="1">On</option>
                            	<option value="0">Off</option>
                            </field>
                    </fieldset>
            </fields>
        </config>
</install>
